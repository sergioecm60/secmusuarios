# Database Principal
DB_HOST=localhost
DB_PORT=3306
DB_NAME=usuarios
DB_USER=your_db_user
DB_PASS=your_secure_password

# Other Systems Databases (for centralized user management)
DB_SECMALQUILERES=gestion_alquileres
DB_SECMTI=portal_db
DB_SECMAUTOS=secmautos_db
DB_SECMRRHH=secmrrhh
DB_PSITIOS=secure_panel_db
DB_SECMAGENCIAS=sistema_transportes

# JWT Configuration
# IMPORTANT: Generate a secure random key for production!
# Use: php -r "echo base64_encode(random_bytes(32));"
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_KEY
JWT_ALGORITHM=HS256
JWT_EXPIRES_IN=3600

# Account Lockout Configuration
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30

# Refresh Token Configuration
REFRESH_TOKEN_EXPIRES_DAYS=7

# App Environment
APP_ENV=development
APP_DEBUG=true